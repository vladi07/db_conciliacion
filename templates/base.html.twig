<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}DB-Conciliación{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        <style>
            body{
                background-image: url("{{ asset('images/fondo-pantalla.png') }}");
            }
        </style>
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap-grid.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap-reboot.min.css') }}">
            <link rel="stylesheet" href="{{ asset('icons/bootstrap-icons.css') }}">
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary bg-image"
             style="background-image: url("{{ asset('images/fondo-pantalla.png') }}")">
            <div class="container-fluid">
                {# <a class="navbar-brand" href="#">Navbar</a> #}
                <a class="navbar-brand" href="{{ path('inicio') }}">
                    <img src="{{ asset('images/Logo SCA vertical.jpeg') }}" alt="" width="40" height="34"
                         class="d-inline-block align-text-top rounded-circle">
                    Base de Datos de Conciliaciones
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('inicio') }}">
                                <i class="bi bi-house-door-fill"></i>
                                Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('departamento_index') }}">
                                <i class="bi bi-geo-alt-fill"></i>
                                Departamentos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('centros_index') }}">
                                <i class="bi bi-building"></i>
                                Centros
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="">
                                <i class="bi bi-graph-up-arrow"></i>
                                Reportes Estadísticos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('usuario_index') }}">
                                <i class="bi bi-person-bounding-box"></i>
                                Administraión de Usuarios
                            </a>
                        </li>
                        {#
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Dropdown link
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li><a class="dropdown-item" href="#">Action</a></li>
                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </li>
                        #}
                    </ul>
                </div>
            </div>
        </nav>
        {% block body %}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script src="{{ asset('js/bootstrap.min.js') }}" ></script>
            <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
