{% extends 'base.html.twig' %}

{% block title %}Reporte{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center">
        <div class="card">
            <div class="card-body">
                <h1>Reporte: {{ reporte }}</h1>
                <a href="{{ path('reporte_index') }}" class="btn btn-primary">
                    Volver
                </a>
                <a href="{{ path('reporte_edit', {'id': reporte.id}) }}" class="btn btn-success">
                    Editar
                </a>
                {{ include('reporte/_delete_form.html.twig') }}
                <table class="table table-striped">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ reporte.id }}</td>
                    </tr>
                    <tr>
                        <th>Gestion</th>
                        <td>{{ reporte.gestion }}</td>
                    </tr>
                    <tr>
                        <th>Acta</th>
                        <td>{{ reporte.acta }}</td>
                    </tr>
                    <tr>
                        <th>Virtual</th>
                        <td>{{ reporte.virtual }}</td>
                    </tr>
                    <tr>
                        <th>FileReporte</th>
                        <td>{{ reporte.fileReporte }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <h2>Solicitud segun idioma</h2>
                {{ form(idioma_form) }}
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <h2>Solicitudes de Casos Segun idioma Expresado</h2>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Castellano</th>
                        <th>Aymara</th>
                        <th>Quechua</th>
                        <th>Otro</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for idioma in idioma %}
                        <tr>
                            <td>{{ idioma.castellano }}</td>
                            <td>{{ idioma.aymara }}</td>
                            <td>{{ idioma.quechua }}</td>
                            <td>{{ idioma.otro }}</td>
                            <td>
                                <a href="" class="btn btn-success">Ver</a>
                                <a href="" class="btn btn-primary">Editar</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">No se encuentran registros</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
