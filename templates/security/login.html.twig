<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>LogIn- DB-Conciliación</title>
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/bootstrap-grid.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/bootstrap-reboot.min.css') }}">
    <link rel="stylesheet" href="{{ asset('icons/bootstrap-icons.css') }}">

    <style>
        body{
            background-image: url("{{ asset('images/fondo-pantalla.png') }}");
        }
        .bg{
            background-image: url("{{ asset('images/Logo_Min_Vice.png') }}");
            background-position: center center;
            background-size: cover;
        }
    </style>
</head>
<body>
    <div class="container w-75 mt-5 rounded shadow">
        <div class="row align-items-stretch">
            <div class="col bg d-none d-lg-block">

            </div>
            <div class="col bg-white p-5 rounded-end ">
                <div class="text-end text-center">
                    <img src="{{ asset('images/Logo SCA vertical.jpeg') }}" width="150" alt="">
                </div>

                <h2 class="fw-bold text-center">Sistema de Conciliación y Arbitraje</h2>
                {# LOGIN #}
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Usted esta logueado como {{ app.user.nombre }}
                            <br>
                            <a href="{{ path('app_logout') }}" class="btn btn-danger">
                                Cerrar Sesión
                            </a>
                        </div>
                    {% endif %}
                    <br>
                    <h1 class="h3 mb-3 font-weight-normal text-center">Iniciar Sesión</h1>
                    <div class="mb-4">
                        <label for="inputUsername" class="form-label">Usuario</label>
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername"
                               class="form-control" autocomplete="username" required autofocus>
                    </div>
                    <div class="mb-4">
                        <label for="inputPassword" class="form-label">Contraseña</label>
                        <input type="password" name="password" id="inputPassword"
                               class="form-control" autocomplete="current-password" required>
                    </div>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <div class="text-center">
                        <button class="btn btn-primary btn-lg" type="submit">
                            Iniciar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>

</body>
</html>